@model WebApplication.Models.ErrorModel
@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                    @Model.Error
                </h2>
                Sorry, an error has occured. @Model.Description
            </div>
        </div>
    </div>
</div>