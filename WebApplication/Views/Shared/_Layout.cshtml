<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/font-awesome")
    @Styles.Render("~/Styles/custom")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @Html.Partial("_MetricsPartial")
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Gallery", "Index", "Gallery")</li>
            </ul>
            @*@Html.Partial("_LoginPartial")*@
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Some useless footer.</p>
        </div>
    </footer>

    @*@Scripts.Render("~/bundles/bootstrap")*@
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
